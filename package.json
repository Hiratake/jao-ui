{
  "name": "@jaoafa/jao-ui",
  "version": "0.3.1",
  "description": "jao UI Components with Vue.js.",
  "keywords": [
    "jaoafa",
    "vue"
  ],
  "homepage": "https://github.com/jaoafa/jao-ui",
  "bugs": "https://github.com/jaoafa/jao-ui/issues",
  "license": "MIT",
  "author": {
    "name": "Hiratake",
    "url": "https://hiratake.xyz"
  },
  "files": [
    "dist/*",
    "src/**/*.vue"
  ],
  "main": "dist/jao-ui.ssr.js",
  "browser": "dist/jao-ui.esm.js",
  "module": "dist/jao-ui.esm.js",
  "unpkg": "dist/jao-ui.min.js",
  "types": "dist/types/src/entry.esm.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/jaoafa/jao-ui.git"
  },
  "sideEffects": [
    "*.vue"
  ],
  "devDependencies": {
    "@babel/core": "7.16.12",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-typescript": "7.16.7",
    "@commitlint/cli": "16.0.2",
    "@commitlint/config-conventional": "16.0.0",
    "@rollup/plugin-alias": "3.1.9",
    "@rollup/plugin-babel": "5.3.0",
    "@rollup/plugin-commonjs": "21.0.1",
    "@rollup/plugin-node-resolve": "13.1.3",
    "@rollup/plugin-replace": "3.0.1",
    "@storybook/addon-essentials": "6.4.14",
    "@storybook/addon-links": "6.4.14",
    "@storybook/builder-webpack5": "6.4.14",
    "@storybook/manager-webpack5": "6.4.14",
    "@storybook/vue3": "6.4.14",
    "@types/jest": "27.4.0",
    "@typescript-eslint/eslint-plugin": "5.9.0",
    "@typescript-eslint/parser": "5.9.0",
    "@vitejs/plugin-vue": "2.0.1",
    "@vue/babel-preset-app": "4.5.15",
    "@zerollup/ts-transform-paths": "1.7.18",
    "can-npm-publish": "1.3.6",
    "chromatic": "6.3.4",
    "cross-env": "7.0.3",
    "css-loader": "6.5.1",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jest": "25.3.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.2.0",
    "eslint-plugin-vue": "8.2.0",
    "husky": "7.0.4",
    "jest": "27.4.7",
    "lint-staged": "12.1.7",
    "minimist": "1.2.5",
    "nanoid": "3.1.31",
    "postcss-html": "1.3.0",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "rollup": "2.63.0",
    "rollup-plugin-postcss": "4.0.2",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-typescript2": "0.31.1",
    "rollup-plugin-vue": "6.0.0",
    "sass": "1.47.0",
    "sass-loader": "12.4.0",
    "style-loader": "3.3.1",
    "stylelint": "14.2.0",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-recess-order": "3.0.0",
    "stylelint-config-recommended-vue": "1.1.0",
    "stylelint-config-standard-scss": "3.0.0",
    "ts-jest": "27.1.3",
    "ttypescript": "1.5.13",
    "typescript": "4.5.5",
    "vite": "2.7.13",
    "vitepress": "0.21.6",
    "vue": "3.2.26"
  },
  "peerDependencies": {
    "vue": "^3.2.26"
  },
  "engines": {
    "node": "16.x"
  },
  "scripts": {
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "prebuild": "rimraf ./dist",
    "postbuild": "rimraf ./dist/types/vite.config.d.ts ./dist/types/src/entry.d.ts ./dist/types/src/dev",
    "build": "cross-env NODE_ENV=production rollup --config rollup.config.js",
    "build:ssr": "cross-env NODE_ENV=production rollup --config rollup.config.js --format cjs",
    "build:es": "cross-env NODE_ENV=production rollup --config rollup.config.js --format es",
    "build:unpkg": "cross-env NODE_ENV=production rollup --config rollup.config.js --format iife",
    "build:docs": "vitepress build docs",
    "build:storybook": "build-storybook",
    "dev": "vite",
    "dev:docs": "vitepress dev docs",
    "dev:storybook": "start-storybook -p 6006",
    "lint": "npm run lint:script & npm run lint:style",
    "lint:script": "eslint . --ext .js,.jsx,.ts,.tsx,.vue",
    "lint:style": "stylelint \"**/*.{css,scss,vue}\"",
    "format": "prettier \"**/*.{js,jsx,ts,tsx,vue,json}\" --write",
    "test": "jest --config=\".jestrc.js\""
  }
}
